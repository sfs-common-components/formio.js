<div style="background-color: #DFF2FF; margin-bottom: 15px">
  <div class="pdf-upload formio-component-file">
    <input type="file" style="opacity: 0; position: absolute;" tabindex="-1" accept=".pdf" ref="hiddenFileInputElement">
    <div class="fileSelector" ref="fileDrop" style="padding: 122px; border: 4px solid white; margin-top: 15px;background-color: #DFF2FF; height: 367px; margin-bottom: 15px">
      <span ref="dragDropText">
        <a href="#" ref="fileBrowse" class="browse">
         <i class="{{ctx.iconClass('plus')}}" style="font-size: 41px; color: white;"></i></a>
        <div style="font-size: 32px; color: #fff; font-weight: 500;">{{ctx.t('Upload Document')}}</div>
        
      </span>
      <div class="progress pdf-progress" ref="uploadProgressWrapper" style="display:none;">
        <div class="progress-bar" ref="uploadProgress" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
    </div>
    <div class="alert alert-danger" ref="uploadError">
  
    </div>
  </div>
</div>

